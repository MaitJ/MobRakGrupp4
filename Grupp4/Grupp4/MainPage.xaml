<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0" VerticalOptions="Start">
            <Label Text="Simple Xamarin forms test" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Margin="20, 0" FontSize="Large" Text="Add your name to the list:"/>
        <Entry 
            x:Name="FirstNameField"
            Placeholder="Your first name"
            TextChanged="HandleTextChanged"
            Margin="30, 0"
        />

        <StackLayout x:Name="NameList">
            
        </StackLayout>
        
        <Button Text="Add name" FontSize="Large" Clicked="OnSubmitButtonClicked" VerticalOptions="EndAndExpand"/>

    </StackLayout>

</ContentPage>
