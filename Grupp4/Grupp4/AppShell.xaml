<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:fontAwesome="clr-namespace:FontAwesome"
       xmlns:local="clr-namespace:Grupp4" x:DataType="local:AppShell"
       Title="FlyoutTest"
       x:Class="Grupp4.AppShell"
       BackgroundColor="ForestGreen"
       >
    <Shell.FlyoutBackground>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="White"
                                      Offset="0.1"/>
            <GradientStop Color="Gray"
                                      Offset="1.0"/>

        </LinearGradientBrush>

    </Shell.FlyoutBackground>
    <!--
        The overall app visual hierarchy is defined here, along with navigation.
    
        https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/shell/
    -->
    <FlyoutItem Title="Weatherapp">
        <FlyoutItem.Icon>
            <FontImageSource
                Glyph="{x:Static fontAwesome:FontAwesomeIcons.Sun}"
                FontFamily="FAS"
                Color="#FFFFFF"
                 />
        </FlyoutItem.Icon>
        <ShellContent Route="WeatherappPage" ContentTemplate="{DataTemplate local:WeatherappPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Favorites">
        <FlyoutItem.Icon>
            <FontImageSource
                Glyph="{x:Static fontAwesome:FontAwesomeIcons.List}"
                FontFamily="FAS"
                Color="#FFFFFF"
                 />
        </FlyoutItem.Icon>
        <ShellContent Route="FavoritesPage" ContentTemplate="{DataTemplate local:FavoritesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Welcome">
        <FlyoutItem.Icon>
            <FontImageSource
                Glyph="{x:Static fontAwesome:FontAwesomeIcons.Warehouse}"
                FontFamily="FAS"
                Color="#FFFFFF"
                 />
        </FlyoutItem.Icon>
        <ShellContent Route="HomePage" ContentTemplate="{DataTemplate local:HomePage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="About">
        <FlyoutItem.Icon>
            <FontImageSource
                Glyph="{x:Static fontAwesome:FontAwesomeIcons.Info}"
                FontFamily="FAS"
                Color= "#FFFFFF"
                 />
        </FlyoutItem.Icon>
        <ShellContent Route="AboutPage" ContentTemplate="{DataTemplate local:AboutPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <FlyoutItem.Icon>
            <FontImageSource
                Glyph="{x:Static fontAwesome:FontAwesomeIcons.Wrench}"
                FontFamily="FAS"
                Color="ForestGreen"
                 />
        </FlyoutItem.Icon>
        <ShellContent Route="SettingsPage" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>




    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="0.2*,0.8*">
                <Image Source="{Binding FlyoutIcon}"
                       Margin="15"
                       HeightRequest="16"
                       />
                <Label Grid.Column="1"
                       Text="{Binding Title}"
                       FontAttributes="Bold"
                       FontSize="16"
                       Margin="15"
                       
                       Padding="0,0,0,0"
                       TextColor="#FFFFFF"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Start"
                       />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>


    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="#00b4d8">
                
                <Label Text="Menu"
                       FontSize="30"
                       TextColor="#FFFFFF"
                       
                       Padding="5,5,5,5"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

</Shell>
