<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4.Views.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="White"
                                      Offset="0.1"/>
                    <GradientStop Color="Gray"
                                      Offset="1.0"/>

                </LinearGradientBrush>

            </StackLayout.Background>
            <Frame BackgroundColor="DarkOliveGreen" Padding="24" CornerRadius="0" VerticalOptions="Start">
                <Label 
                    Text="Welcoming page" 
                    HorizontalTextAlignment="Center"
                    TextColor="White"
                    FontSize="36"/>
            </Frame>
            <Label Text="Welcoming screen text"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                FontSize="28"/>

            <StackLayout HorizontalOptions="Center" x:Name="logList">
                
            </StackLayout>

            <Button Text="Click to log" FontSize="Large" Clicked="logButtonClicked" VerticalOptions="EndAndExpand" BackgroundColor="ForestGreen" Margin="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>